<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  ImageView Style  -->
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedBig">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedMedium">
        <item name="cornerSize">8dp</item>
    </style>

    <!-- TabLayout Text -->
    <style name="tab_text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom RatingBar -->
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_rating_integrate</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <!-- CollapsingToolbar Expanded Style -->
    <style name="CollapsingToolbar.Expanded.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- CollapsingToolbar Collapsed Style -->
    <style name="CollapsingToolbar.Collapsed.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Custom Chip -->
    <style name="Widget.MaterialComponents.Chip.MyStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>

        <item name="chipIconVisible">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="android:textColor">@color/text_color_chip</item>
        <item name="chipIconTint">@color/text_color_chip</item>
        <item name="rippleColor">@null</item>
        <item name="chipBackgroundColor">@color/mtrl_choice_chip_background_color</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>